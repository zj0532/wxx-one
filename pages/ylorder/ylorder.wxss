/* pages/ylorder/ylorder.wxss */page,
.page,
.page__bd {
	height: 100%;
}

.page__bd {
	padding-bottom: 0;
}

.weui-tab__content {}

.weui-tab {
	position: relative;
	height: 100%
}

.weui-tab__panel {
	box-sizing: border-box;
	height: 100%;
	overflow: auto;
	-webkit-overflow-scrolling: touch
}

.weui-navbar {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	position: absolute;
	z-index: 500;
	top: 0;
	width: 100%;
	border-bottom: 1rpx solid #ccc
}


.weui-navbar__item {
	position: relative;
	display: block;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	flex: 1;
	padding: 13px 0;
	text-align: center;
	font-size: 0
}

.weui-navbar__item.weui-bar__item_on {
	color: #1aad19
}

.weui-navbar__slider {
	position: absolute;
	content: " ";
	left: 0;
	bottom: 0;
	width: 6em;
	height: 3px;
	background-color: #1aad19;
	-webkit-transition: -webkit-transform .3s;
	transition: -webkit-transform .3s;
	transition: transform .3s;
	transition: transform .3s, -webkit-transform .3s
}


.weui-navbar__title {
	display: inline-block;
	font-size: 15px;
	max-width: 8em;
	width: auto;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	word-wrap: normal
}

.weui-tab {
	position: relative;
	height: 100%
}

.weui-tab__panel {
	box-sizing: border-box;
	height: 100%;
	padding-top: 50px;
	overflow: auto;
	-webkit-overflow-scrolling: touch
}


.item {
	background: white;
	padding: 30rpx 0;
	position: relative;
	border-bottom: 3rpx solid #F3F3F3;
}

.item-left {
	width: 220rpx;
	height: 170rpx;
	margin-left: 20rpx;
	border-radius: 5rpx;
}

.item-middle {
	margin-left: 30rpx;
}

.item-middle .title {
	font-size: 14px;
	font-weight: 600;
	color: black;
	margin-top: 15rpx
}

.item-middle .num {
	font-size: 12px;
	color: #888;
	margin-top: 15rpx;
}

.item-middle .total {
	font-size: 12px;
	color: #888;
	margin-top: 15rpx;
}

.item-right {
	font-size: 13px;
	color: #4075ff;
	position: absolute;
	right: 20rpx;
	margin-top: 15rpx;
}
